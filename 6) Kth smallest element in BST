class Solution {
public:
    
    int ans;
    int kthSmallest(TreeNode* root, int &k) {
      
        // inorder traversal - the best way to solve
      
        if(root==NULL) return 0;
        kthSmallest(root->left, k);
        
        k--;
        if(k == 0) ans= root->val;
        
        kthSmallest(root->right, k);
        
        return ans;
    }
};
